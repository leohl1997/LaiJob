<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginTop="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cmt_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/user_id"
            android:textSize="20sp"
            android:textStyle="bold|italic"
            app:layout_constraintStart_toEndOf="@+id/cmt_thumbnail"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/cmt_time"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:layout_gravity="end|bottom"
            android:layout_margin="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="end|bottom"
            android:text="Time"
            app:layout_constraintBottom_toTopOf="@+id/comment_body"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:id="@+id/cmt_thumbnail"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/thumbnail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toEndOf="@+id/cmt_thumbnail"
            app:layout_constraintTop_toBottomOf="@+id/cmt_user_name">

            <ImageView
                android:id="@+id/cmt_star_one"
                android:layout_width="@dimen/rating_star_dimen"
                android:layout_height="@dimen/rating_star_dimen"
                android:src="@drawable/star_hollow" />

            <ImageView
                android:id="@+id/cmt_star_two"
                android:layout_width="@dimen/rating_star_dimen"
                android:layout_height="@dimen/rating_star_dimen"
                android:src="@drawable/star_hollow" />

            <ImageView
                android:id="@+id/cmt_star_three"
                android:layout_width="@dimen/rating_star_dimen"
                android:layout_height="@dimen/rating_star_dimen"
                android:src="@drawable/star_hollow" />

            <ImageView
                android:id="@+id/cmt_star_four"
                android:layout_width="@dimen/rating_star_dimen"
                android:layout_height="@dimen/rating_star_dimen"
                android:src="@drawable/star_hollow" />

            <ImageView
                android:id="@+id/cmt_star_five"
                android:layout_width="@dimen/rating_star_dimen"
                android:layout_height="@dimen/rating_star_dimen"
                android:src="@drawable/star_hollow" />

        </LinearLayout>

        <TextView
            android:id="@+id/comment_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cmt_thumbnail" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>